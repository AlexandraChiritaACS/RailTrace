<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RailTraceMobile.Views.LoginPage" Title="LoginPage"
             BackgroundColor="#a0b2ec">
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="Lb1_UserName"  Text="Username" TextColor="#000037"/>
            <Entry x:Name="Entry_Username" Placeholder="Username" TextColor="#990e0f"/>
            <Label x:Name="Lb1_Password" Text="Password" TextColor="#000037" />
            <Entry x:Name="Entry_Password" Placeholder="Password" TextColor="#a0b2ec"/>
            <Button x:Name="Btn_Signin" Text="Sign in" Clicked="SignInProcedure" TextColor="#ffffff" BackgroundColor="#000037"/>

            <Button
  Text="Take Photo"
  BackgroundColor="Lime"
  Grid.Row="2"
  Clicked="TakePhoto_Clicked"/>
            <Button x:Name="GroupChat" Text="Group Chat" Clicked="SignInGroup" TextColor="#ffffff" BackgroundColor="#000037"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>